package com.examples.playground.views.playground.topic_14._3_exception_views;

import com.vaadin.flow.component.button.Button;
import com.vaadin.flow.component.html.H2;
import com.vaadin.flow.component.orderedlayout.VerticalLayout;
import com.vaadin.flow.router.Route;

@Route("exception-example-main-view")
public class ExceptionExampleMainView extends VerticalLayout {

  public ExceptionExampleMainView() {

    Button triggerAddressNotFound = new Button("Trigger Address Not Found Error");
    
    Button triggerGenericError = new Button("Trigger Generic Error");

    triggerAddressNotFound.addClickListener(e -> {
      throw new ClientAddressNotFoundException("The requested address ID was not found in the database");
    });

    triggerGenericError.addClickListener(e -> {
      throw new RuntimeException("Generic system error occurred");
    });

    add(new H2("Error Handling Demo"),
        triggerAddressNotFound,
        triggerGenericError
    );
  }
}